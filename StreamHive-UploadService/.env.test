# NODE_ENV for test environment
NODE_ENV=test

# Test JWT secret
JWT_SECRET=test-secret-key-do-not-use-in-production

# Test MinIO configuration
MINIO_ENDPOINT=127.0.0.1
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=testminioaccess
MINIO_SECRET_KEY=testminiosecret
MINIO_RAW_BUCKET=test-streamhive-raw-videos
MINIO_PROCESSED_BUCKET=test-streamhive-processed-videos

# Test RabbitMQ configuration
RABBITMQ_URL=amqp://admin:admin123@localhost:5672
TRANSCODE_QUEUE=test_video_transcode_queue

# Test upload configuration
MAX_FILE_SIZE=104857600  # 100MB for tests
ALLOWED_FORMATS=mp4,mov,avi,webm
UPLOAD_TIMEOUT=30000     # 30 seconds for tests

# Test rate limiting (more lenient for tests)
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX=100       # 100 requests per minute

# Test logging
LOG_LEVEL=error
